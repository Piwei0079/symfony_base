{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Liste des tâches</h1>
        <a href="{{ path('app_task_create') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Créer une tâche
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ message }}</span>
        </div>
    {% endfor %}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for task in tasks %}
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <div class="p-6">
                    <h2 class="text-xl font-bold mb-2 text-gray-800">{{ task.name }}</h2>
                    <p class="text-gray-600 mb-4 line-clamp-3">{{ task.description }}</p>
                    <div class="flex justify-between items-center text-sm text-gray-500 mb-4">
                        <span>Par {{ task.author.email }}</span>
                        <span>{{ task.createdAt|date('d/m/Y') }}</span>
                    </div>
                    <div class="flex justify-end space-x-2">
                        <a href="{{ path('app_task_view', {'id': task.id}) }}" class="text-blue-500 hover:text-blue-700 font-semibold">Voir</a>
                        {% if is_granted('EDIT', task) %}
                            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="text-yellow-500 hover:text-yellow-700 font-semibold">Modifier</a>
                        {% endif %}
                        {% if is_granted('DELETE', task) %}
                            <form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?');" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                <button class="text-red-500 hover:text-red-700 font-semibold">Supprimer</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-full text-center py-8 text-gray-500">
                Aucune tâche trouvée.
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
